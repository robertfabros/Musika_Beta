<!-- app/views/carts/show.html.erb -->
<h2>Your Cart</h2>

<% if @cart.cart_items.any? %>
  <table>
    <thead>
      <tr>
        <th>Song</th>
        <th>Artist</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Total</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @cart.cart_items.each do |item| %>
        <tr>
          <td><%= link_to item.music.title, music_path(item.music) %></td>
          <td><%= item.music.artist.user.name %></td>
          <td>
            <%= form_with model: item, url: cart_item_path(item), method: :patch, local: true do |f| %>
              <%= f.number_field :quantity, min: 1 %>
              <%= f.submit "Update" %>
            <% end %>
          </td>
          <td><%= number_to_currency(item.price) %></td>
          <td><%= number_to_currency(item.price * item.quantity) %></td>
          <td>
            <%= link_to 'Remove', cart_item_path(item), method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h3>Total: <%= number_to_currency(@cart.total_price) %></h3>

  <%= link_to 'Checkout', new_order_path, class: 'button' %>
<% else %>
  <p>Your cart is empty.</p>
<% end %>
