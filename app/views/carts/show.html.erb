<!-- app/views/carts/show.html.erb -->
<h2>Your Shopping Cart</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |item| %>
      <tr>
        <td><%= item["title"] %></td>
        <td><%= item["quantity"] %></td>
        <td><%= number_to_currency(item["price"]) %></td>
        <td>
          <%= button_to 'Remove', remove_from_cart_cart_path(music_id: item["music_id"]), method: :delete %>
          <%= form_with url: update_cart_cart_path, method: :patch, local: true do %>
            <%= hidden_field_tag :music_id, item["music_id"] %>
            <%= number_field_tag :quantity, item["quantity"], min: 1 %>
            <%= submit_tag 'Update' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
