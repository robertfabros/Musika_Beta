
    <h1>All Artists</h1>
    <div class="artist-list">
      <% @artists.each do |artist| %>
        <div class="artist-item">
          <%= link_to artist_path(artist) do %>
            <%= image_tag artist.profile_picture_url, alt: "Photo of #{artist.user.name}", style: 'width: 120px; height: 120px;' %>
            <p><%= artist.user.name %></p>
          <% end %>
        </div>
      <% end %>
    </div>

