<!-- app/views/orders/index.html.erb -->
<h2>Your Orders</h2>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Total Price</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td>$<%= '%.2f' % order.total_price %></td>
        <td><%= order.status %></td>
        <td><%= link_to 'Show', order_path(order) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
